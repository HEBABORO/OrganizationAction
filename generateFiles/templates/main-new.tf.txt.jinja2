# Configure the DataDog Provider
                {%- elif account.type == "GitHub" %}
# Configure the GitHub Provider
provider "github" {
    token = var.github-token
    owner = {{ account.name }}
}

data "github_organization" "github_organization_{{ organization.name }}_{{ account.name }}" {
    name = {{ account.name }}
}
